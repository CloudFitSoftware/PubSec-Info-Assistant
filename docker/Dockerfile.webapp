FROM python:3.10

WORKDIR /webapp

COPY webapp/ /webapp

RUN pip3 install --upgrade pip
RUN pip install --no-cache-dir -r requirements.txt
RUN pip install gunicorn

EXPOSE 5050
CMD gunicorn -w 4 --bind 0.0.0.0:5050 -k uvicorn.workers.UvicornWorker app:app --threads 100